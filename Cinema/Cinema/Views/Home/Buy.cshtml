
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Buy</h2>

<div>
    <h3>Ваш заказ</h3>


    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Название фильма</th>
                <th>Зал</th>
                <th>Цена</th>
                <th>Время сеанса</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.Session.Name</td>
                <td>@ViewBag.Session.Hall</td>
                <td>@ViewBag.Session.Price</td>
                <td>@ViewBag.Session.Time</td>
            </tr>
        </tbody>
    </table>

    <form class="form-horizontal" method="post" action="">
        <fieldset>
            <legend>Форма оформления покупки</legend>
            <div class="form-group">
                <label for="inputPerson" class="col-lg-2 control-label">Имя</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputPerson" name="Person" placeholder="Введите Ваше имя">
                </div>
            </div>
            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Номер места</label>
                <div class="col-lg-10">
                    <select class="form-control" id="select" name="SeatNumber">
                        @foreach (var number in ViewBag.Session.FreeSeats)
                        {
                            <option value="@number">@number</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>